<section class="hero is-dark">
  <div class="hero-body, is-small">
    <div class="container">
      <h1 class="title has-text-grey-light is-size-2">
        定期会員編集
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @customer do |f| %>
           <div class="field">
            <%= f.label :number, "会員番号", class: "label" %>
            <%= f.text_field :number, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :customername, "お客様名", class: "label" %>
            <%= f.text_field :customername, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :email, "メールアドレス", class: "label" %>
            <%= f.email_field :email, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :profile, "プロフィール", class: "label" %>
            <%= f.text_area :profile, class: "textarea" %>
          </div>

          <%= f.submit "更新", class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>


